<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F6F5F1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerador de Avatares"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1F1B20"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/etPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/edit_text"
        android:hint="Descreva seu avatar (ex: mago de fogo)"
        android:padding="12dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btnCriar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRIAR AVATAR"
        android:backgroundTint="#034088"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="14dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galeria:"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:textColor="#1F1B20"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAvatares"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>